@model NorthRegion.Models.NorthRegionViewModel
@{
    ViewData["Title"] = "Add Product";
}

<h1>@ViewData["Title"]</h1>

<form enctype="multipart/form-data" method="post" asp-controller="NorthRegion" asp-action="Create" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="Name" class="form-label">Please enter Product's Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Please enter Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Please enter Price:</label>
        <input type="text" class="form-control" id="Price" asp-for="Price" />
    </div>
    <div class="mb-3">
        <label for="Photo" class="form-label">Please upload Image:</label>
        <input type="file" class="form-control" name="ImageFile" id="ImageFileName"/>
    </div>
    <div class="mb-3">
        <label for="Source" class="form-label">Please choose Source of Image:</label>
        <div class="col-sm-9">
            <select class="form-select" asp-for="Source">
                <option value="Unknown">Unknown</option>
                <option value="Domestic">Dosmestic</option>
                <option value="Oversea">Oversea</option>
            </select>
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-info mx-auto d-inline" value="Add" />
        <input type="button" class="btn btn-primary mx-auto d-inline" action="action"
            onclick="window.location.href='/NorthRegion'" value="Cancel" />
    </div>
</form>